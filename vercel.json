{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "/server/server.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/server.ts"
    },
    {
      "src": "/static/css/(.*)",
      "dest": "/client/static/css/$1"
    },
    {
      "src": "/static/js/(.*)",
      "dest": "/client/static/js/$1"
    },
    {
      "src": "/asset-manifest.json",
      "dest": "/client/asset-manifest.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/client/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/client/manifest.json"
    },
    {
      "src": "/logo192.png",
      "dest": "/client/logo192.png"
    },
    {
      "src": "/logo512.png",
      "dest": "/client/logo512.png"
    },
    {
      "src": "/robots.txt",
      "dest": "/client/robots.txt"
    },
    {
      "src": "/((?!api|socket.io/).*)",
      "dest": "/client/index.html"
    }
  ]
}
